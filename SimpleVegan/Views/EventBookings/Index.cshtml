@model IEnumerable<SimpleVegan.Models.EventBooking>

@{
    ViewBag.Title = "Event Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:deeppink">Event Bookings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Event.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Member.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Event.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Member.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EventBookingID }) |
