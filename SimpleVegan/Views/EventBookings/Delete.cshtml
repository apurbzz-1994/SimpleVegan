@model SimpleVegan.Models.EventBooking

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="text-align: center;">
    <h2 style="color: deeppink">Delete</h2>

    <h3>Are you sure you want to delete this reservation?</h3>
    <div>
        <hr />
        
        <div style="margin-top: 50px; margin-bottom: 50px;">
            <p><strong>Event: </strong>@Html.DisplayFor(model => model.Event.Title)</p>
            <p><strong>Date: </strong>  @Html.DisplayFor(model => model.Event.EventDate)</p>
        </div>
        

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> 
                @Html.ActionLink("Back to Events", "Index", "Events", null, new { @class="btn btn-default"})
            </div>
        }
    </div>

</div>