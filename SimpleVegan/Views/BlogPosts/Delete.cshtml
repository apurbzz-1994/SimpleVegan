@model SimpleVegan.Models.BlogPost

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div  style="text-align: center;">
    <h2  style="color: deeppink">Delete</h2>

    <h3>Are you sure you want to delete this blog post?</h3>
    <div>
        <hr />

        <div style="margin-top: 50px; margin-bottom: 50px;">
            <p><strong>Title: </strong>@Html.DisplayFor(model => model.Title)</p>
            <p><strong>Date of publishing: </strong>  @Html.DisplayFor(model => model.Dop)</p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            @Html.ActionLink("Back to Blogs", "Index", "BlogPosts", null, new { @class = "btn btn-default" })
        </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
}
